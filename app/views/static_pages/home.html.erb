<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".sentence_3" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".sentence_0" %></h1>

    <h2>
      <%= t ".sentence_1" %>
      <%= link_to t(".link"), "http://www.railstutorial.org/" %>
      <%= t ".sentence_2" %>
    </h2>

    <%= link_to t(".link_to_1"), signup_path,
      class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
